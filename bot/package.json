{
	"name": "bot-new",
	"version": "0.0.1",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "bun run migrate && bun run --watch src/main.ts",
		"build": "bun run migrate && bun run src/main.ts",
		"start": "bun run migrate && bun --smol run src/main.ts",
		"check": "tsc --noEmit",
		"fmt": "prettier --write .",
		"lint": "bun oxlint --fix",
		"codegen": "bun run graphql-codegen --config codegen.ts && bun run scripts/nocheck.ts src/infra/codex/graphql",
		"test:integration": "bun run scripts/run_tests.ts integration",
		"test:unit": "bun run scripts/run_tests.ts unit",
		"getsession": "bun run scripts/generate_tg_session.ts",
		"new-migration": "bun run drizzle-kit generate --config drizzle.config.ts --custom",
		"migrate": "bun run drizzle-kit migrate --config drizzle.config.ts",
		"schema": "bun run drizzle-kit introspect --config drizzle.config.ts",
		"ngrok:rinat": "ngrok http --url=dogfish-faithful-incredibly.ngrok-free.app 3001"
	},
	"devDependencies": {
		"@0no-co/graphqlsp": "1.15.0",
		"@flydotio/dockerfile": "^0.7.10",
		"@graphql-codegen/cli": "5.0.7",
		"@graphql-codegen/schema-ast": "4.1.0",
		"@graphql-typed-document-node/core": "3.2.0",
		"@types/bun": "latest",
		"@types/pg": "8.15.5",
		"oxlint": "1.15.0",
		"prettier": "3.6.2"
	},
	"peerDependencies": {
		"typescript": "5.9.2"
	},
	"dependencies": {
		"@grammyjs/menu": "1.3.1",
		"@grammyjs/storage-redis": "2.5.1",
		"@mtcute/bun": "0.26.2",
		"@opentelemetry/auto-instrumentations-node": "0.64.6",
		"@opentelemetry/exporter-metrics-otlp-proto": "0.205.0",
		"@opentelemetry/exporter-trace-otlp-proto": "0.205.0",
		"@opentelemetry/resources": "2.1.0",
		"@opentelemetry/sdk-metrics": "2.1.0",
		"@opentelemetry/sdk-node": "0.205.0",
		"@opentelemetry/sdk-trace-node": "2.1.0",
		"@opentelemetry/semantic-conventions": "1.37.0",
		"@slack/webhook": "7.0.6",
		"@telegraf/entity": "0.7.0",
		"axios": "1.12.2",
		"bull": "4.16.5",
		"drizzle-kit": "0.31.5",
		"drizzle-orm": "^0.44.6",
		"ethers": "6.15.0",
		"grammy": "1.38.3",
		"graphql": "16.11.0",
		"ioredis": "5.8.1",
		"pg": "8.16.3",
		"sury": "11.0.0-alpha.4",
		"viem": "2.38.2",
		"w": "2.3.1"
	},
	"overrides": {
		"axios": "1.12.2"
	}
}
